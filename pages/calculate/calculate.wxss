/* pages/calculate/calculate.wxss */
page {
    height: 100%;
}

.screen-output {
    width: 100%;
    height: 300rpx;
    background-color: #000;
    text-align: right;
    color: #fff;
}

.screen-output-text {
    padding-right: 40rpx;
    font-size: 120rpx;
}

.btnGroup {
    display: flex;
    flex-direction: row;
    background-color: rgb(65, 64, 64);
    color: #fff;
}

.btn {
    width: 160rpx;
    height: 170rpx;
    min-height:10rpx;
    margin:10rpx;
    background-color: #00000085;
    border: 2px solid rgba(61, 57, 57, 0.041);
    border-radius:100px;
    text-align:center;
    line-height:150rpx;
    display:inline-block;
    font-size: 60rpx;
}
.btn:active {
    background-color: #000;
    transition: all 0.5s;
}

.orange {
    background-color: rgb(250, 160, 50);
}
.orange:active {
    background-color: rgb(248, 138, 4);
    transition: all 0.5s;
}

.gray {
    background-color: rgb(161, 160, 160);
    color: #000;
}
.gray:active {
    background-color: rgb(116, 114, 114);
    transition: all 0.5s;
}

.zero {
    width: 345rpx;
}